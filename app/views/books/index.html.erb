<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td></td>
      
    </tr>
  </tbody>
  <% end %>
  
</table>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>

<div class="fld">
  
  <label>Title</label>
  <%= f.text_field :title %>
  
</div>

<div class="fld">
  
  <label>Body</label>
  <%= f.text_area :body %>
  
</div>

  <%= f.submit 'Create Book' %>
  
<% end %>

