
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>


<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% Book.all.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      
    </tr>
  </tbody>
  <% end %>
  
</table>

<h2>New book</h2>


<% if @book.errors.any? %>
  <h4><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Book.new do |f| %>

<div class="fld">
  
  <label>Title</label>
  <%= f.text_field :title %>
  
</div>

<div class="fld">
  
  <label>Body</label>
  <%= f.text_area :body %>
  
</div>

  <%= f.submit 'Create Book' %>
  
<% end %>

